@model List<AppliancesApp.Models.DbModels.ApplianceRestriction>
@{
    ViewBag.Title = "SystemSettings";
}

<h2>SystemSettings</h2>

@using (Ajax.BeginForm("UpdateRestricts", "Manage", new { }, new AjaxOptions {  OnSuccess = "alert('succes')" }, new { enctype = "multipart/form-data" }))
{
    for(int i = 0; i < Model.Count; i++)
    {
        @Html.HiddenFor(m => m[i].Id)
        @Html.LabelFor(m => m[i].Name)
        @Html.CheckBoxFor(m => m[i].IsHidden)
    }
    <input type="submit" value="Save" />
}

